<html>
  <head>
    <meta charset='utf-8'>
    <title>Places Visited</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    @using PlacesBeen.Models;
  </head>
  <body>
    <h1>Welcome To Travel World!</h1>
    
    <h2>Places you've traveled to:</h2>

    @if (Model.Count == 0)
    {
      <p>You haven't added any places yet!</p>
    }

    <ul>
      @foreach (Place place in Model)
      {
        <li><a href="/places/@place.Id">@place.CityName</a></li>
      }
    </ul>

    <a href="/places/new">Add a new place.</a>

    <form action="/places/delete" method="post">
      <button name="button" class="btn, btn-primary">Clear your plans</button>
    </form>
  </body>
</html>